{
  "name": "nodejs_setup",
  "scripts": {
    "up": "docker compose --env-file ./environment/.env.default up --build -d",
    "log": "docker logs -f --since 10m server_nodejs_setup",
    "start:server": "nodemon --legacy-watch --config ./nodemon/nodemon.server.json  --project ./packages/server/tsconfig.json ./packages/server/src/main.ts",
    "build:server": "tsc -b ./packages/server/tsconfig.json",
    "prod:server": "node ./packages/server/dist/server/src/main.js",
    "build": "npm run build:server"
  },
  "dependencies": {
    "dotenv": "^16.3.2",
    "express": "^4.18.2",
    "module-alias": "^2.2.3",
    "mongoose": "^8.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-switch-case": "^1.1.2",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  }
}
